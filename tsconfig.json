{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "lib": ["es2020","dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types","./src/types"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"
  ],
 "exclude": [
   "dist",
   "node_modules"
],
  "references": [
    { "path": "./tsconfig.app.json" }
    // …remove or fix the node one if you’re not actually building “scripts/”
  ]
}
